<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liujin.token.mapper.MenuMapper">

    <select id="fetchMenu" resultType="com.liujin.token.bean.Menu">
        select * from menu order by id
    </select>


    <resultMap id="menuMap" type="com.liujin.token.bean.Menu">
        <id column="id" property="id"/>
        <result property="path" column="path"/>
        <result property="component" column="component"/>
        <result property="name" column="name"/>
        <result property="parentId" column="parentId"/>
        <result property="title" column="title"/>
        <result property="icon" column="icon"/>
        <collection property="children" column="id" ofType="com.liujin.token.bean.Menu" select="fetchMenuByParentId"/>
    </resultMap>


    <select id="fetchMenuByParentId" parameterType="int" resultMap="menuMap">
        select * from menu where parentId=#{parentId} and hidden=0
    </select>
</mapper>